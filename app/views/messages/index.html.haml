.wrapper
    =render 'layouts/side'
    =render 'layouts/group'
    .chat-main
        .main-header
            .main-header__left-block
                %ul.main-header__left-block__current-group test-group
                %ul.main-header__left-block__member-list
                    %li.main-header__left-block__member-list__member Member:aaa
            .main-header__edit-btn Edit
        .messages
            = render partial: 'layouts/message', collection: @messages

        .form
            = form_for [@group, @message], html: {class: 'new_message'} do |f|
                .input-box
                    = f.text_field :content, class: 'input-box__text', placeholder: 'type a message'
                    = f.label :image, class: 'input-box__image' do
                        = fa_icon("image")
                        = f.file_field :image, class: 'input-box__image__file'
                = f.submit 'Send', class: 'submit-btn'

